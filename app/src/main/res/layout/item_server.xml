<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="@dimen/list_single_line_height"
              android:orientation="horizontal"
              android:clickable="true"
              android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dialog_padding"
        app:srcCompat="@drawable/ic_wifi_white_24dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/list_horizontal_padding"
        android:layout_marginEnd="@dimen/list_horizontal_padding"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:lines="1"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"/>

</LinearLayout>