<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:enabled="true"
        android:icon="@mipmap/ic_shortcut_power_settings_new_gray"
        android:shortcutId="all_off"
        android:shortcutLongLabel="@string/shortcut_all_off_long"
        android:shortcutShortLabel="@string/shortcut_all_off">
        <intent
            android:action="me.zachcheatham.rnetremote.action.ALL_OFF"
            android:targetClass="me.zachcheatham.rnetremote.ActionShortcutActivity"
            android:targetPackage="me.zachcheatham.rnetremote">

            <categories android:category="android.intent.category.LAUNCHER"/>

        </intent>
    </shortcut>
    <shortcut
        android:enabled="true"
        android:icon="@mipmap/ic_shortcut_power_settings_new"
        android:shortcutId="all_on"
        android:shortcutLongLabel="@string/shortcut_all_on_long"
        android:shortcutShortLabel="@string/shortcut_all_on">
        <intent
            android:action="me.zachcheatham.rnetremote.action.ALL_ON"
            android:targetClass="me.zachcheatham.rnetremote.ActionShortcutActivity"
            android:targetPackage="me.zachcheatham.rnetremote">

            <categories android:category="android.intent.category.LAUNCHER"/>

        </intent>
    </shortcut>
    <shortcut
        android:enabled="true"
        android:icon="@mipmap/ic_shortcut_volume_off"
        android:shortcutId="toggle_mute"
        android:shortcutLongLabel="@string/shortcut_toggle_mute"
        android:shortcutShortLabel="@string/shortcut_toggle_mute">
        <intent
            android:action="me.zachcheatham.rnetremote.action.TOGGLE_MUTE"
            android:targetClass="me.zachcheatham.rnetremote.ActionShortcutActivity"
            android:targetPackage="me.zachcheatham.rnetremote">

            <categories android:category="android.intent.category.LAUNCHER"/>

        </intent>
    </shortcut>
</shortcuts>