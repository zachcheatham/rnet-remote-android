<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:enabled="true"
        android:icon="@mipmap/ic_shortcut_power_settings_new_gray">
        <intent
            android:action="me.zachcheatham.rnetremote.action.ALL_OFF"
            android:targetPackage="me.zachcheatham.rnetremote"
            android:targetClass="me.zachcheatham.rnetremote.ActionShortcutActivity" >

            <categories android:category="android.intent.category.LAUNCHER"/>

        </intent>
    </shortcut>
    <shortcut
        android:enabled="true"
        android:icon="@mipmap/ic_shortcut_power_settings_new">
        <intent
            android:action="me.zachcheatham.rnetremote.action.ALL_ON"
            android:targetPackage="me.zachcheatham.rnetremote"
            android:targetClass="me.zachcheatham.rnetremote.ActionShortcutActivity">

            <categories android:category="android.intent.category.LAUNCHER"/>

        </intent>
    </shortcut>
    <shortcut
        android:enabled="false"
        android:icon="@mipmap/ic_shortcut_volume_off">
        <intent
            android:action="me.zachcheatham.rnetremote.action.TOGGLE_MUTE"
            android:targetPackage="me.zachcheatham.rnetremote"
            android:targetClass="me.zachcheatham.rnetremote.ActionShortcutActivity">

            <categories android:category="android.intent.category.LAUNCHER"/>

        </intent>
    </shortcut>
</shortcuts>